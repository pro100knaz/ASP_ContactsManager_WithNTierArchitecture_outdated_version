@{
	ViewBag.Title = "Upload Countries From Excel";
}
@* 
<h2>Upload Countries From Excel</h2>
<div class="container"> *@
<div class="flex">
	<div class="flex-1">
		<span class="text-grey"> Contacts</span>
		<i class="fa-solid fa-caret-right"></i>
		<span class="text-grey"> Persons</span>
		<i class="fa-solid fa-caret-right"></i>
		<span class="text-grey"> Create</span>
	</div>
</div>



<div class="form-container">
	<form asp-action="UploadFromExcel" asp-controller="Countries" method="post" enctype="multipart/form-data">
		<h2 class="text-large"> Upload Countries From Excel</h2>
		<div class="form-field flex">
			<div class="w-25">
				<label class="form-label pt">
					Choose an xlsx file
				</label>
			</div>
			<div class="flex-1">
				<input type="file" name="excelFile" class="form-input"></input>
				<div class="text-red">@ViewBag.ErrorMessage</div>
				<div class="text-green">@ViewBag.Message</div>
			</div>
		</div>
		<div class="form-field flex">
			<div class="w-25">

			</div>
			<div class="flex">
				<button type="submit" class="button button-green-back">Upload</button>
			</div>
		</div>
	</form>
</div>